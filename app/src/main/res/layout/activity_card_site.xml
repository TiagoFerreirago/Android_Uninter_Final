<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:weightSum="2"
    android:background="#FFA500">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#001751"
            android:orientation="vertical"
            android:paddingLeft="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_titulo_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#BC283CF1"
                    android:fontFamily="@font/squada_one"
                    android:text="Inside Out 2"
                    android:textColor="#03A9F4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/favorito_id"
                    android:layout_width="25dp"
                    android:layout_height="32dp"
                    android:src="@drawable/favorito"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/img_capa_id"
                android:layout_width="156dp"
                android:layout_height="171dp"
                android:scaleType="centerCrop"
                android:src="@drawable/inside_out2" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/layout_id2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#001751"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <!-- Parte horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_titulo_id2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#BC283CF1"
                    android:fontFamily="@font/squada_one"
                    android:text="Inside Out 2"
                    android:textColor="#03A9F4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/favorito_id2"
                    android:layout_width="25dp"
                    android:layout_height="32dp"
                    android:src="@drawable/favorito"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/img_capa_id2"
                android:layout_width="156dp"
                android:layout_height="171dp"
                android:scaleType="centerCrop"
                android:src="@drawable/inside_out2" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
